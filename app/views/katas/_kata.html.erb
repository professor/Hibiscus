<h2 class="entry-title"><%= link_to kata.title, kata %></h2>
<div class="entry-meta">
  <span class="meta-prep meta-prep-author">Posted on</span> <a href="<%= kata_path(kata) %>" title="<%= kata.created_at.to_date.to_formatted_s(:long_ordinal) %>" rel="bookmark"><span class="entry-date"><%= kata.created_at.to_date.to_formatted_s(:long_ordinal) %></span></a> <span class="meta-sep">by</span> <span class="author vcard"><a class="url fn n" href="<%= user_path(kata.user) %>" title="View all posts by <%= kata.user.name %>"><%= kata.user.display_name %></a></span>
</div>
<% if !kata.source.nil? %>
    <div>
      <h4>Source:  <%= auto_link_urls kata.source %></h4>
    </div>
<% end %>

<% if !kata.rating.nil? %>
    <div>
      <h4>Rating: <%= kata.rating %></h4>
    </div>
<% end %>

<div class="entry-content">
  <%= kata.content.html_safe %>
</div>
<div class="entry-utility">
  <span class="cat-links">
	<span class="entry-utility-prep entry-utility-prep-cat-links">Posted in
      <% if kata.tags.any? %>
			<% kata.tags.each do |tag| %>
				<%= link_to tag.name, tag, :rel => "category tag" %>
			<% end %>
		<% end %>
	</span>
  </span>
  <span class="meta-sep">|</span>
  <span class="comments-link"><a href="<%= kata_path(kata) %>" title="Comment on <%= kata.title %>"><%= kata.comments.size  %> Comments</a></span>

  <span class="edit-link">
    <%= link_to 'Edit', edit_kata_path(kata), :title => "Edit Kata", :class => "kata-edit-link" %>
  </span>
  <span class="edit-link">
    <%= link_to 'Delete', kata, :confirm => 'Are you sure?', :method => :delete, :title => "Delete Kata", :class => "kata-edit-link" %>
  </span>
</div>