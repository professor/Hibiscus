<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :size => "81" %>
  </div>

  <div class="field">
      <%= f.label :source_url %><br />
      <%= f.text_field :source_url, :size => "81" %>
  </div>

  <div class="field">
    <%= f.label :tempTags, "Tags" %><br />
    <% if @post.tags.any? %>
			<%= f.text_field :tempTags, :size => "81", :value => @tags %>
		<% else %>
			<%= f.text_field :tempTags, :size => "81" %>
		<% end %>
  </div>



  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "80x20" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
